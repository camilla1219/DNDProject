@page "/createSurvey"
@rendermode InteractiveServer

<PageTitle>Create Survey</PageTitle>



<div class="card">
    <h3>Create Survey</h3>
    <div class="form-group field">
        <label>Title</label>
        <input type="text" @bind="title" @bind:event="oninput"/> 
		
